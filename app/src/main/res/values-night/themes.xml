<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResturantApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>-->
        <!-- Customize your theme here. -->
        // change color of overflow menu background and text
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/blackColorText</item>
    </style>

    <style name="ToolbarColored" parent="Theme.ResturantApp">
        <item name="android:textColorSecondary">@color/colorAccent</item>
    </style>

    <style name="Theme.ResturantApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="darkText">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FontMediumBlack">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/darkHeader</item>
    </style>

    <style name="FontSmallGrey">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>


    <style name="lightGreyStyle">
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>


    <style name="busyModeSwitch">
        <item name="fontFamily">@font/regular</item>
        <item name="android:background">@color/darkHeader</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="textColor">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="containerBack">
        <item name="android:background">@color/grey</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="delayBox">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:background">@drawable/delay_bg_dark</item>
    </style>

    //styling text

    <style name="FontSmallBlack">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="fieldsBg">
        <item name="android:background">@color/darkHeader</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="fieldsBgGrey">
        <item name="fontFamily">@font/regular</item>
        <item name="backgroundColor">@color/darkHeader</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="Back">
        <item name="backgroundColor">@color/darkHeader</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="appBack">
        <item name="backgroundColor">@color/black</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="NavBarColor">
        <item name="android:background">@color/darkHeader</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:titleTextColor">@color/white</item>
    </style>

    <style name="historyOptionBg">
        <item name="android:background">@drawable/bg_menu_recycler_dark</item>
        <item name="fontFamily">@font/regular</item>
    </style>

    <style name="AppTheme.transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkHeader</item>
        <item name="colorPrimaryDark">@color/darkHeader</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    ///styling for unpaid button

    <style name="UnpaidStyle">
        <item name="android:radius">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:color">@color/red</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="backgroundColor">@color/red</item>
        <item name="background">@drawable/paid_unpaid_background</item>
    </style>

</resources>